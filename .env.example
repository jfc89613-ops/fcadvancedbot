
# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# BINANCE API CONFIGURATION
# ================================
# Get these from your Binance account -> API Management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Set to true for testing, false for live trading
BOT_TESTNET=false

# ================================
# TRADING CONFIGURATION
# ================================
# Primary trading symbol (used by single-symbol mode)
SYMBOL=BTCUSDT

# Leverage and margin settings
AUTO_LEVERAGE=true
LEVERAGE=20
MARGIN_TYPE=ISOLATED
POSITION_MODE=ONE_WAY

# Risk management
MAX_MARGIN_USDT=0.5
MAX_OPEN_POSITIONS=5
RISK_PER_TRADE=0.01

# Data intervals
KLINE_INTERVAL=1m
RECV_WINDOW=5000

# ================================
# DATA & WARMUP CONFIGURATION
# ================================
# Historical data for bot initialization
WARMUP_INTERVAL=1m
WARMUP_LOOKBACK_MIN=1500

# Training data configuration
TRAIN_INTERVAL=1m
TRAIN_LOOKBACK_DAYS=30

# ================================
# MULTI-SYMBOL CONFIGURATION
# ================================
# Number of top symbols to use
TOPN=19
MAX_SYMBOLS=19

# Supported symbols (must have trained models)
SYMBOLS=1000PEPEUSDT,ADAUSDT,AVAXUSDT,BIOUSDT,BNBUSDT,BTCUSDT,DOGEUSDT,ENAUSDT,ETHUSDT,FARTCOINUSDT,HYPEUSDT,LINKUSDT,LTCUSDT,ONTUSDT,PROMPTUSDT,SOLUSDT,SUIUSDT,WIFUSDT,XRPUSDT

# ================================
# OPTIONAL ADVANCED SETTINGS
# ================================
# ML configuration path
ML_CFG=configs/ml.yaml

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
